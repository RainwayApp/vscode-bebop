{
    "name": "bebop",
    "displayName": "bebop",
    "description": "An efficient schema based binary serialization format for building cross-platform, real-time applications.",
    "version": "0.2.0",
    "publisher": "rainway",
    "license": "Apache-2.0",
    "engines": {
        "vscode": "^1.51.0"
    },
    "main": "./out/extension.js",
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onLanguage:bebop"
	],
    "contributes": {
        "languages": [
            {
                "id": "bebop",
                "aliases": [
                    "Bebop",
                    "bebop"
                ],
                "extensions": [
                    ".bop"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bebop",
                "scopeName": "source.bop",
                "path": "./syntaxes/bebop.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "bebop",
                "path": "./snippets/bebop.json"
            }
        ],
        "commands": [
		]
    },
    "scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "bebop-tools": "2.0.0"
    },
    "devDependencies": {
		"@types/vscode": "^1.51.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
